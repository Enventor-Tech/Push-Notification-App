<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PushNotifications.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <Label
                x:Name="EasternTime"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="" />

            <Button
                x:Name="registerButton"
                Clicked="OnRegisterButtonClicked"
                Text="Schedule Notification" />
            <Entry
                x:Name="MessageEntry"
                Placeholder="Enter notification message"
                Text="Meeting reminder" />
            <Entry
                x:Name="MinutesBeforeEntry"
                Keyboard="Numeric"
                Placeholder="Minutes before (e.g., 45)"
                Text="45" />

            <Button Clicked="OnScheduleNotificationClicked" Text="Schedule Notification" />
            <Button
                x:Name="deregisterButton"
                Clicked="OnUpdateNotificationClicked"
                Text="Update Notification Time" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>